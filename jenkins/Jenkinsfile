pipeline {
    agent any

        parameters {
            string(name: 'TEST_PATH', defaultValue: '', description: 'Optional: test file or folder, e.g. tests/login.spec.ts')
        }

        environment {
            NODE_ENV = 'ci'
        }

     

    stages {
        stage('Install Dependencies') {
            when {
                expression { env.BRANCH_NAME == 'master' || env.GIT_BRANCH == 'origin/master' }
            }
            steps {
                sh 'npm ci'
                sh 'npx playwright install'
            }
        }

        stage('Run Playwright Tests') {
            when {
                expression { env.BRANCH_NAME == 'master' || env.GIT_BRANCH == 'origin/master' }
            }
            steps {
                sh '''
                    mkdir -p allure-results test-results
                                        if [ -n "$TEST_PATH" ]; then
                                            npx playwright test "$TEST_PATH"
                                        else
                                            npx playwright test
                                        fi
                '''
            }
        }

        stage('Publish Allure Report') {
            when {
                expression { env.BRANCH_NAME == 'master' || env.GIT_BRANCH == 'origin/master' }
            }
            steps {
                sh 'npx allure generate ./allure-results -o ./allure-report --clean || true'
            }
        }
    }

    post {
        always {
            junit allowEmptyResults: true, testResults: 'test-results/junit.xml'
            archiveArtifacts artifacts: 'allure-results/**,allure-report/**', allowEmptyArchive: true
        }
    }
}
